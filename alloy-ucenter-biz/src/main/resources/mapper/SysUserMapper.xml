<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alloy.cloud.ucenter.biz.mapper.SysUserMapper">

    <sql id="BaseColumnSql">
		user_id,username,password,salt,phone,head_img,org_code,update_time,is_lock,is_delete,object_version_number,create_by,create_time,last_update_by,last_update_time
	</sql>

    <sql id="BaseValuesSql">
		#{userId},#{username},#{password},#{salt},#{phone},#{headImg},#{orgCode},#{updateTime},#{isLock},#{isDelete},#{object_version_number},#{create_by},#{create_time},#{last_update_by},#{last_update_time}
	</sql>

    <insert id="insert" parameterType="com.alloy.cloud.ucenter.biz.entity.SysUser">
        insert into sys_user (
        <include refid="BaseColumnSql"/>
        )values(
        <include refid="BaseValuesSql"/>
        )
    </insert>

    <update id="update" parameterType="com.alloy.cloud.ucenter.biz.entity.SysUser">
        update sys_user
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="salt != null">salt = #{salt},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="headImg != null">head_img = #{headImg},</if>
            <if test="orgCode != null">org_code = #{orgCode},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="isLock != null">is_lock = #{isLock},</if>
            <if test="isDelete != null">is_delete = #{isDelete},</if>
            <if test="lastUpdateTime != null">last_update_time = #{lastUpdateTime},</if>
            <if test="lastUpdateBy != null">last_update_by = #{lastUpdateBy},</if>
        </set>
        where user_id = #{userId}
    </update>

    <delete id="deleteByPrimaryKey" parameterType="string">
		delete from sys_user where user_id = #{userId}
	</delete>

    <select id="selectByPrimaryKey" parameterType="string" resultType="com.alloy.cloud.ucenter.biz.entity.SysUser">
        select
        <include refid="BaseColumnSql"/>
        from sys_user
        where user_id = #{userId}
    </select>

    <select id="queryByUserName" resultType="com.alloy.cloud.ucenter.biz.entity.SysUser" >
        select
        <include refid="BaseColumnSql"/>
        from sys_user
        where username = #{username}
    </select>
</mapper>
